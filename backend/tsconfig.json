{
    "compilerOptions": {
        "baseUrl": ".",

        "paths": {
            "shared/*": ["../shared/src/*"],
            "services/*": ["./src/services/*"],
            "routers/*": ["./src/routers/*"],
            "utils/*": ["./src/utils/*"]
        },

        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node"
    },

    "ts-node": {
        "require": ["tsconfig-paths/register"]
    },
}