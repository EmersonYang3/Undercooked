{
    "compilerOptions": {
        "baseUrl": ".",

        "paths": {
            "shared/*": ["../shared/src/*"],
            "services/*": ["./src/services/*"],
            "sockets/*": ["./src/sockets/*"],
            "modules/*": ["./src/modules/*"]
        },

        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node"
    },

    "ts-node": {
        "require": ["tsconfig-paths/register"]
    },
}